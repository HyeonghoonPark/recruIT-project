<mapper namespace="com.recruit.mapper.UserMapper">
<!--문> 안쓰는 거 같아서 주석 처리 	
	<select id="read" resultType="com.recruit.domain.UserVO">
		select
		uid, upw, uname, upoint
		from
		tblUser
		where uid = #{uid}
	</select>

	<select id="listAll" resultType="com.recruit.domain.UserVO">
		select
		uid, upw, uname, upoint
		from
		tblUser
	</select> -->

	
	<!--문> 로그인 처리 -->
	<select id="login" resultType="BoardVO">

		select id, pw, pname
		from
		Project.tblUser
		where id = #{id} and pw = #{pw}
	</select>
	<!--// -->

	<!--문> 자동로그인  -->
	<update id="keepLogin">

		update tblUser
		set sessionKey = #{sessionId},
		sessionLimit = #{next}
		where id = #{id}

	</update>


	<select id="checkUserWithSessionKey" resultType="BoardVO">

		select *
		from
		tblUser
		where sessionKey = #{value} and sessionLimit > now()

	</select>
	<!--// -->

</mapper>
